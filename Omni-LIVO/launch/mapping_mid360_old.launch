<launch>
<!-- Launch file for Livox AVIA LiDAR -->

	<arg name="rviz" default="true" />

	<rosparam command="load" file="$(find fast_livo)/config/mid360_old.yaml" />

	<node pkg="fast_livo" type="fastlivo_mapping" name="laserMapping" output="screen">
		<rosparam file="$(find fast_livo)/config/mid360_old_cam.yaml" />
	</node>
	
	<group if="$(arg rviz)">
		<node launch-prefix="nice" pkg="rviz" type="rviz" name="rviz" args="-d $(find fast_livo)/rviz_cfg/mid360.rviz" />
	</group>
	<!-- build 2d map -->
    <include file="$(find fast_livo)/launch/Pointcloud2Map.launch" />

    <!-- pointscloud2 to laserscans -->
    <include file="$(find fast_livo)/launch/PointsCloud2toLaserscan.launch" />

    <!-- 发布一个雷达body到机器人足端body_foot的静态映射 -->
    <node pkg="tf" type="static_transform_publisher" name="tf_pub_1" args="0 0 0 -0.7854 0 0 body body_foot 100" />
    <!-- 发布一个雷达初始位置camera_init到机器人足端初始位置body_init的静态映射 -->
    <node pkg="tf" type="static_transform_publisher" name="tf_pub_2" args="0 0 0 -0.7854 0 0 camera_init robot_foot_init 100" />

launch-prefix="gdb -ex run --args"
launch-prefix="valgrind --leak-check=full"
</launch> 	
